#ifndef EVENTMANAGER_H
#define EVENTMANAGER_H
#include <bitset>

namespace ice
{
namespace events
{

class EventManager
{
public:
    typedef enum Event
    {
        EVENT_UP,
        EVENT_DOWN,
        EVENT_LEFT,
        EVENT_RIGHT,
        EVENT_PAUSE,
        EVENT_NUM_
    } Event;

public:
    EventManager()
        : currentBuffer_(0), shouldQuit_(false)
    {}

    bool Init();
    void Poll();

    bool ShouldQuit();

private:
    std::bitset<Event::EVENT_NUM_> buffers_[2];
    unsigned currentBuffer_;
    bool shouldQuit_;
};

} // namespace events

} // namespace ice

#endif // EVENTMANAGER_H
